<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDBDBD"
    tools:context=".professionalFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="#B39478"
        android:fontFamily="@font/acme"
        android:gravity="center_horizontal"
        android:text="Professional Info"
        android:textColor="#080B08"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/acme"
            android:paddingVertical="10dp"
            android:text="Degree in Android App Dev."
            android:textAlignment="center"
            android:textColor="@android:color/system_accent1_100"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/acme"
            android:paddingVertical="10dp"
            android:text="Ex. Chef"
            android:textAlignment="center"
            android:textColor="@android:color/system_accent1_100"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/acme"
            android:layout_alignParentStart="true"
            android:paddingVertical="10dp"
            android:text="Upcoming Ethical Hacker"
            android:textAlignment="center"
            android:textColor="@android:color/system_accent1_100"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/acme"
            android:paddingVertical="10dp"
            android:text="7 CXC's"
            android:textAlignment="center"
            android:textColor="@android:color/system_accent1_100"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/acme"
            android:paddingVertical="10dp"
            android:textColor="@android:color/system_accent1_100"
            android:textSize="24sp" />

    </LinearLayout>
</RelativeLayout>